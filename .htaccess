#No directory listing
<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>

Options -Indexes

RewriteEngine on
RewriteRule ^resume$ Errol_Markland_Resume.pdf [NC] # /resume --> straight to pdf

# remove file ending (/index.php -> /index)
RewriteRule ^([a-zA-Z]+)$ $1.php [NC]
RewriteRule ^handlers/([a-zA-Z]+)$ $1.php [NC]
